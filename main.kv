        CustButton:
            size_hint: None, .275
            width: 147.5
            on_press: root.btn_play();
            Image:
                source: './Resources/Play.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 250, 250
                allow_stretch: True
                height: dp(120)
        CustButton:
            size_hint: None, .275
            width: 147.5
            on_press: root.btn_next();
            Image:
                source: './Resources/Next.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 250, 250
                allow_stretch: True
                height: dp(120)
        CustButton:
            text: "Skip 30s"
            size_hint: None, .275
            width: 147.5
            on_press: root.btn_skip();
