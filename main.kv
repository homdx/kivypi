<LockScreen>:
    id: calculator
    display: entry
    rows: 5
    padding: 10
    spacing: 10
    # Where input is displayed
    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
    
    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        Button:
            text: "1"
            on_press: entry.text += self.text
        Button:
            text: "2"
            on_press: entry.text += self.text
        Button:
            text: "3"
            on_press: entry.text += self.text
        Button:
            text: "4"
            on_press: entry.text += self.text
        Button:
            text: "Submit"
            on_press: root.btn_checkInput(entry.text)

<CalandarPopup>:
    calandar_list: calandar_list_view
    title: ""
    separator_height: 0
    ListView:
        id: calandar_list_view
        adapter:
            ListAdapter(data=["Doug Smith"], cls=app.CalandarListButton)

<VolumePopup>:
    title: ""
    separator_height: 0
    BoxLayout:
        title: "Calandar Events"
        orientation: "vertical"
        Button:
            text: "-1"
            on_release: root.btn_volDown()
        Button:
            text: "+1"
            on_release: root.btn_volUp()
        Slider:
            text: "Select Volume"
            on_value: root.screen.button_text = str(self.value)
        Button:
            text: "Done"
            on_release: root.closeandUpdate()
        Button:
            text: "Exit"
            on_release: root.exitandUpdate()