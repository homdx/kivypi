<CustLabel2@Label>:
    font_size: 14
    pos_hint: [None, None]
    color: 1, 0.757, 0.145, 1
    size_hint: [.8,.8]

<CustLabel@Label>:
    font_size: 11
    pos_hint: [None, None]
    color: utils.get_color_from_hex('#F05F40')
    size_hint: [.8,.8]

<CustLabel@Label>:
    font_size: 11
    pos_hint: [None, None]
    color: 1, 0.757, 0.145, 1
    size_hint: [.8,.8]

<CustButton@Button>:
    text: ""
    padding_x: self.width
    font_name: "Resources/LemonMilk.otf"
    bold: "True"
    font_size: 22
    color: 1, 1, 1, 1
    bcolor: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.pos
            size: self.size

<LockButton@Button>:
