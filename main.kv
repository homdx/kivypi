<VolumePopup>:
    title: ""
    separator_height: 0
    BoxLayout:
        title: "Volume Page"
        orientation: "vertical"
        Button:
            text: "+1"
            on_release: root.btn_volUp()
        Button:
            text: "-1"
            on_release: root.btn_volDown()
        Slider:
            text: "Select Volume"
            on_value: root.screen.volume_buttonText = str(self.value)
        Button:
            text: "Done"
            on_release: root.closeandUpdate()
        Button:
            text: "Exit"
            on_release: root.exitandUpdate()