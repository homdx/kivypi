<KeyboardScreen>:
    displayLabel: displayLabel
    kbContainer: kbContainer
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.15
            text: "Available Keyboard Layouts"
        BoxLayout:
            id: kbContainer
            size_hint_y: 0.2
            orientation: "horizontal"
            padding: 10
        Label:
            id: displayLabel
            size_hint_y: 0.15
            markup: True
            text: "[b]Key pressed[/b] - None"
            halign: "center"
        Button:
            text: "Back"
            size_hint_y: 0.1
            on_release: root.manager.current = "home"
        Widget:
            # Just a space taker to allow for the popup keyboard
            size_hint_y: 0.5

<LockScreen>:
    id: lockscreen
    GridLayout:
        rows: 5
        padding: 50
        spacing: 10
    
        BoxLayout:
            LockLabel:
                text: root.displayText
                font_size: 32
                multiline: False
    
        BoxLayout:
            spacing: 10
            LockButton:
                text: "7"
                on_press: lockscreen.updateInput(self.text)
            LockButton:
                text: "8"
                on_press: lockscreen.updateInput(self.text)
            LockButton:
                text: "9"
                on_press: lockscreen.updateInput(self.text)
    
        BoxLayout:
            spacing: 10
            LockButton:
                text: "4"
                on_press: lockscreen.updateInput(self.text)
            LockButton:
                text: "5"
                on_press: lockscreen.updateInput(self.text)
            LockButton:
                text: "6"
                on_press: lockscreen.updateInput(self.text)
    
        BoxLayout:
            spacing: 10
            LockButton:
                text: "1"
                on_press: lockscreen.updateInput(self.text)
            LockButton:
                text: "2"
                on_press: lockscreen.updateInput(self.text)
            LockButton:
                text: "3"
                on_press: lockscreen.updateInput(self.text)
    
        BoxLayout:
            spacing: 10
            LockButton:
                text: "<-"
                on_press: lockscreen.deleteInput()
            LockButton:
                text: "0"
                on_press: lockscreen.updateInput(self.text)
            LockButton:
                text: "OK"
                on_press: lockscreen.btn_checkInput()

<PL@BoxLayout>:
    spacing: dp(16)
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Button:
        text: root.value
        on_release: root.page.playlist(root.value)
<PlayListPage>:
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            size: self.size
            pos: self.pos
    rv: rv
    orientation: 'vertical'
    name: ''
    display: entry
    GridLayout:
        id: entry
        cols: 3
        rows: 2
        size_hint_y: None
        height: dp(108)
        padding: dp(8)
        text: ''
        Label:
            text: root.name
        Button:
            text: 'Back'
            size_hint: None, .235
            on_press: root.rv.viewclass.screen.manager.current = 'home'
        Button:
            text: 'Refresh'
            size_hint: None, .235
            on_press: root.refresh()
        Button:
            text: 'Set Favorite'
            size_hint: None, .235
            on_press: entry.text = "Favorite"

    RecycleView:
        id: rv
        scroll_type: ['bars', 'content']
        scroll_wheel_distance: dp(114)
        bar_width: dp(10)
        viewclass: 'PL'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(2)

